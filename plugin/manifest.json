{
    "manifest_version": 3,
    "name": "AI Productivity Assistant",
    "version": "0.1.0",
    "description": "A browser plugin for translation, document conversion, and intelligent search using LLMs.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
